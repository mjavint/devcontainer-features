{
  "id": "odoodev",
  "version": "1.0.0",
  "name": "Odoo Devcontainer",
  "description": "A devcontainer template for Odoo development",
  "documentationURL": "https://github.com/devcontainers/odoodev",
  "licenseURL": "https://github.com/devcontainers/odoodev/blob/main/LICENSE",
  "options": {
    "pythonVersion": {
      "type": "string",
      "description": "Python version to use in the devcontainer",
      "proposals": ["3.8", "3.10"],
      "default": "3.10"
    }
  },
  "platforms": ["Any"]
}
